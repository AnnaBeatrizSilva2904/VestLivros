@model VestLivros.Models.Livro

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/admin.css" rel="stylesheet">

<h1>Create Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <input asp-for="Resumo" class="form-control" />
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnaliseCritica" class="control-label"></label>
                <input asp-for="AnaliseCritica" class="form-control" />
                <span asp-validation-for="AnaliseCritica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contexto" class="control-label"></label>
                <input asp-for="Contexto" class="form-control" />
                <span asp-validation-for="Contexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArquivoFoto" class="control-label"></label>
                <input asp-for="ArquivoFoto" class="form-control" />
                <span asp-validation-for="ArquivoFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="botao btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
