@model VestLivros.Models.Livro

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/admin.css" rel="stylesheet">

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <textarea rows="5" cols="30" asp-for="Resumo" class="form-control"></textarea>
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnaliseCritica" class="control-label"></label>
                <textarea rows="5" cols="30" asp-for="AnaliseCritica" class="form-control"></textarea>
                <span asp-validation-for="AnaliseCritica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contexto" class="control-label"></label>
                <textarea rows="5" cols="30" asp-for="Contexto" class="form-control"></textarea>
                <span asp-validation-for="Contexto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FaculdadeId" class="control-label"></label>
                <select asp-for="FaculdadeId" class="form-control">
                    <option value="1">Unicamp</option>
                    <option value="2">USP</option>
                </select>
                <span asp-validation-for="FaculdadeId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ArquivoFoto" class="control-label">Imagem Atual</label><br />

                @if (!string.IsNullOrEmpty(Model.ArquivoFoto))
                {
                    <img src="@Model.ArquivoFoto" alt="Imagem atual" style="max-height:250px;" class="mb-2" />
                }
                else
                {
                    <p><em>Nenhuma imagem cadastrada</em></p>
                }

                <input name="novaImagem" type="file" class="form-control" accept=".jpg,.png,.jpeg,.gif" />
                <small class="text-muted">Selecione apenas se quiser trocar a imagem atual!!</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="botao btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>