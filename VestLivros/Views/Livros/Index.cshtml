@model IEnumerable<VestLivros.Models.Livro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/admin.css" rel="stylesheet">

<h1>Livros</h1>
<p>
    <a class="botao btn" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>
        Adicionar
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculdade)
            </th>
            <th>
            Editar/Visualizar/Excluir
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                    <td>@item.Faculdade?.FaculdadeNome</td>
                <td>
                    <a class="text-decoration-none me-2" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil text-warning" title="Alterar"></i>
                    </a>
                    <a class="text-decoration-none me-2" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-search text-info" title="Detalhes"></i>
                    </a>
                    <a class="text-decoration-none" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash text-danger" title="Excluir"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
