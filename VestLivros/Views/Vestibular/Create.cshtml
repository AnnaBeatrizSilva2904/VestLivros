@model VestLivros.Models.Vestibular

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/admin.css" rel="stylesheet">

<h1>Cadastrar Novo Ano</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Salvar Ano" class="botao btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="botao btn mt-2">Voltar</a>
</div>