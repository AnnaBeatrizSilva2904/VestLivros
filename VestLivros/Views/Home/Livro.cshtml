@model VestLivros.Models.Livro;
@{
    ViewData["Title"] = "Detalhes do Livro";
}

<link href="~/css/site.css" rel="stylesheet">
<!--Component Card-->
<div class="card mb-3">
    <div class="row g-0">
        <div class="imagem col-md-4">
            <img src="@Model.ArquivoFoto" class="imagem-livro img-fluid" alt="...">
            <button type="button" class="botao-acessar btn btn-primary">
                <i class="bi bi-mortarboard"></i>
                @(Model.Faculdade != null ? Model.Faculdade.FaculdadeNome : "Sem faculdade vinculada")
            </button>
            @if (!string.IsNullOrEmpty(Model.PDF))
            {
                <button type="button" class="botao-acessar btn btn-success" data-bs-toggle="modal"
                    data-bs-target="#pdfModal">
                    Ver PDF
                </button>
            }
            else
            {
                <p class="text-muted mt-3">Nenhum PDF disponível.</p>
            }

            <!-- Modal com iframe para visualizar o PDF -->
            <div class="modal fade" id="pdfModal" tabindex="-1" aria-labelledby="pdfModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="pdfModalLabel">@Model.Nome - PDF</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Fechar"></button>
                        </div>
                        <div class="modal-body">
                            <iframe src="@Model.PDF" width="100%" height="600px" style="border:none;"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col md-8">
            <div class="card-livro">
                <h5 class="titulo-livro">@Model.Nome</h5>
                <p class="card-text">
                <h5>Resumo da obra:</h5>@Model.Resumo</p>
                <p class="card-text">
                <h5>Contexto histórico e social:</h5>@Model.Contexto</p>
                <p class="card-text">
                <h5>Análise crítica:</h5>
                </h5>@Model.AnaliseCritica</p>
                </p>
            </div>
        </div>
    </div>
</div>